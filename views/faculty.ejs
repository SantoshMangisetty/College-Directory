<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student</title>
    <link rel="stylesheet" href="./styles/student.css">
</head>
<body>
    <div class="outside">
    <div class="container">
        <%if(locals.user){%>
            <H1>Welcome <%= user %></H1>
        <%}%>
        
        <div class="nav">
            <form action="/faculty" method="POST"><button class="btn">Faculty Details</button></form>
            <form action="/studentdetails" method="POST"><button class="btn">Student Details</button></form>
        </div>
        <div class="info">
           <% if(locals.check){%>
            <ul class="details"> 
                <li>Name : <%=check.rows[0].name%></li>
                <li>DepartmentID : <%= check.rows[0].department_id%></li>
                <li>Department : <%= check.rows[0].department%></li>
            </ul>
           <%}%>
           <% if(locals.grade){%>
            <ul class="details"> 
                <li>Grade : <%=grade.rows[0].grade%></li>
                <li>Attendance : <%= grade.rows[0].attendance %> / 100.0</li>
            </ul>
           <%}%>

           <%if(locals.result){%>
            <ul class="details">
                <%for(var i=0;i!=result.rows.length;i++){%>
                    <li>Student Name: <%= result.rows[i].name%>
                        <ul class="details1">
                            <li> Department : <%= result.rows[i].department%></li>
                            <li> Grade : <%= result.rows[i].grade%></li>
                            <li> Attendance : <%= result.rows[i].attendance%></li>
                        </ul>
                    </li> 
                <%}%>
                </ul>
           <%}%>
           
        </div>
    </div>
</div>
    
</body>
</html>